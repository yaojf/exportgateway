<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <classPathEntry location="/data/mysql-connector-java-5.1.26-bin.jar"/>
    <context id="context" targetRuntime="MyBatis3"
             defaultModelType="flat">
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.CaseInsensitiveLikePlugin"/>
        <plugin type="plugins.SqlMapperOverridePlugin"/>
        <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
            <property name="searchString" value="Example$"/>
            <property name="replaceString" value="Conditions"/>
        </plugin>

        <commentGenerator>
            <!-- 是否去除自动生成的注释，默认false，true：去除；false：不去除 -->
            <property name="suppressAllComments" value="true"/>
            <!-- 指定在生成的注释是否将包括时间戳，默认是false -->
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/qccrgateway" userId="root"
                        password="123456"/>

        <javaModelGenerator targetPackage="com.qccr.qccrgateway.dal.entity"
                            targetProject="dal/qccrgateway-dal/src/main/java"/>
        <sqlMapGenerator targetPackage="mapper" targetProject="dal/qccrgateway-dal/src/main/resources"/>
        <javaClientGenerator targetPackage="com.qccr.qccrgateway.dal.mapper"
                             targetProject="dal/qccrgateway-dal/src/main/java" type="XMLMAPPER"/>


        <table tableName="app" domainObjectName="App">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
            <columnOverride column="status" javaType="Byte"></columnOverride>
        </table>

        <table tableName="method" domainObjectName="Method">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
            <columnOverride column="status" javaType="Byte"></columnOverride>
        </table>


        <table tableName="external_system" domainObjectName="ExternalSystem">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
            <columnOverride column="status" javaType="Byte"></columnOverride>
        </table>


        <table tableName="app_method" domainObjectName="AppMethod">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
            <columnOverride column="status" javaType="Byte"></columnOverride>
        </table>


    </context>
</generatorConfiguration>
